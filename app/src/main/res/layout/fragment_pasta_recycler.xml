<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btnAbrirPasta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/pasta_icon"
        android:tint="#000000" />

    <TextView
        android:id="@+id/txtNomePasta"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="8dp"
        android:text="Nome da pasta"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnEditarPasta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/editar_icon"
        android:tint="#000000" />

    <ImageButton
        android:id="@+id/btnExcluirPasta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/deletar_icon"
        android:tint="#000000" />

</LinearLayout>