<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appLite.conteudo.dados.DadoCadastroFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/nome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dado_icone"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="100dp" />

    <ImageView
        android:id="@+id/cor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/texto_icone"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="296dp" />

    <ImageView
        android:id="@+id/dados"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/d6_icone"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="473dp" />

    <EditText
        android:id="@+id/textNomePastaCriar"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/textDadoPastaCriar"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Dados"
        android:inputType="text"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="473dp" />

    <EditText
        android:id="@+id/textCorPastaCriar"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Cor"
        android:inputType="text"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="296dp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        tools:context=".appLite.conteudo.navBar.NavBarFragment">

        <ImageButton
            android:id="@+id/btnMenuDadoCriar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            android:src="@drawable/barras_menu" />

        <Button
            android:id="@+id/btnLogoDadoCriar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_weight="1"
            android:text="Dicenamics LITE"
            android:textAlignment="center"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/btnUsuarioDadoCriar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="UsuÃ¡rio"
            android:scaleType="fitCenter"
            android:src="@drawable/user_menu" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

    <Button
        android:id="@+id/btnConfirmarCadastrarDado"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        app:icon="@android:drawable/ic_menu_save"
        app:iconTint="#000000"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="651dp" />

    <Button
        android:id="@+id/btnCancelarCadastrarDado"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconTint="#000000"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="651dp" />

</androidx.constraintlayout.widget.ConstraintLayout>