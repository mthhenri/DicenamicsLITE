<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.app.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/LoginToCadastro"
            app:destination="@id/cadastroFragment"
            app:popUpTo="@id/cadastroFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/LoginToInicial"
            app:destination="@id/inicialFragment"
            app:popUpTo="@id/inicialFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.example.app.login.CadastroFragment"
        android:label="fragment_cadastro"
        tools:layout="@layout/fragment_cadastro" />
    <fragment
        android:id="@+id/inicialFragment"
        android:name="com.example.app.appLite.conteudo.inicial.InicialFragment"
        android:label="fragment_inicial"
        tools:layout="@layout/fragment_inicial" >
        <action
            android:id="@+id/InicialToUsuario"
            app:destination="@id/usuarioFragment"
            app:popUpTo="@id/usuarioFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/ToInicial"
            app:destination="@id/inicialFragment"
            app:popUpTo="@id/inicialFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/InicialToMenu"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/menuFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/usuarioFragment"
        android:name="com.example.app.appLite.conteudo.usuario.UsuarioFragment"
        android:label="fragment_usuario"
        tools:layout="@layout/fragment_usuario" >
        <action
            android:id="@+id/UsuarioToInicial"
            app:destination="@id/inicialFragment"
            app:popUpTo="@id/inicialFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/ToUsuario"
            app:destination="@id/usuarioFragment"
            app:popUpTo="@id/usuarioFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/UsuarioToMenu"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/menuFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.app.appLite.conteudo.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/ToMenu"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/menuFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/MenuToUsuario"
            app:destination="@id/usuarioFragment"
            app:popUpTo="@id/usuarioFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/MenuToInicial"
            app:destination="@id/inicialFragment"
            app:popUpTo="@id/inicialFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/MenuToDados"
            app:destination="@id/dadosFragment" />
        <action
            android:id="@+id/MenuToRolagemRapida"
            app:destination="@id/rolagemRapidaFragment" />
    </fragment>
    <fragment
        android:id="@+id/dadosFragment"
        android:name="com.example.app.appLite.conteudo.dados.DadosFragment"
        android:label="fragment_dados"
        tools:layout="@layout/fragment_dados" >
        <action
            android:id="@+id/DadosToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/DadosToInicial"
            app:destination="@id/inicialFragment" />
        <action
            android:id="@+id/DadosToUsuario"
            app:destination="@id/usuarioFragment" />
        <action
            android:id="@+id/DadosToDadoCriar"
            app:destination="@id/dadoCadastroFragment" />
    </fragment>
    <fragment
        android:id="@+id/dadoCadastroFragment"
        android:name="com.example.app.appLite.conteudo.dados.DadoCadastroFragment"
        android:label="fragment_dado_cadastro"
        tools:layout="@layout/fragment_dado_cadastro" >
        <action
            android:id="@+id/DadoCriarToDados"
            app:destination="@id/dadosFragment" />
        <action
            android:id="@+id/DadoCriarToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/DadoCriarToInicial"
            app:destination="@id/inicialFragment" />
        <action
            android:id="@+id/DadoCriarToUsuario"
            app:destination="@id/usuarioFragment" />
    </fragment>
    <fragment
        android:id="@+id/rolagemRapidaFragment"
        android:name="com.example.app.appLite.conteudo.speedDados.RolagemRapidaFragment"
        android:label="fragment_rolagem_rapida"
        tools:layout="@layout/fragment_rolagem_rapida" >
        <action
            android:id="@+id/RolagemToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/RolagemToUsuario"
            app:destination="@id/usuarioFragment" />
        <action
            android:id="@+id/RolagemToInicial"
            app:destination="@id/inicialFragment" />
    </fragment>
</navigation>